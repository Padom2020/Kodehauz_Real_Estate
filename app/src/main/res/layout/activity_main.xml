<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp"
            android:layout_margin="10dp"
            >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/estate"
        android:scaleType="fitXY"
        android:background="@drawable/bckground"
        />
        </androidx.cardview.widget.CardView>

        <Button
        android:id="@+id/estate"
        android:layout_below="@id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_no_1_estate_reps"
        android:textSize="30sp"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-thin"
        android:background="@drawable/cornerblue"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/kodehauz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kodehauz_real_estate"
        android:textColor="@android:color/white"
        android:layout_below="@id/estate"
        android:layout_centerHorizontal="true"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/getstarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kodehauz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Get Started"
        android:background="@drawable/roundedcorners"
        android:textSize="20sp"

        />
    </RelativeLayout>
</ScrollView>